      </property>
      <property name="ipv4_udppackets_sent" type="float32" description="number of udp sent packages">
        <value></value>
      </property>
      <property name="ipv4_udp_errors" type="float32" description="number of udp error packages">
        <value></value>
      </property>
      <property name="cpu_interrupts" type="float32" description="">
        <value></value>
      </property>
      <property name="cpu_context_switches" type="float32" description="">
        <value></value>
      </property>
      <property name="softnet_processed" type="uint32" description="">
        <value></value>
      </property>
      <property name="softnet_dropped" type="uint32" description="">
        <value></value>
