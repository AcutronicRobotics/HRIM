<?xml version="1.0"?>
<root>
<generic_specs>
	<property name="hrim_version" type="string" description="used hrim version">
        <value/>
    </property>
    <property name="device_kind_id" type="uint8" unit="enum" enum='{"HRIM_COMM": 0, "HRIM_SENSOR": 1, "HRIM_ACTUATOR": 2, "HRIM_COGNITION": 3, "HRIM_UI": 4, "HRIM_POWER": 5, "HRIM_COMPOSITE": 6}' description="device classification">
        <value/>
    </property>
    <property name="device_name" type="string" description="sub-type">
        <value/>
    </property>
    <property name="vendor_id" type="uint32" description="vendor identifier">
        <value>123</value>
    </property>
    <property name="product_id" type="uint32" description="part number">
        <value/>
    </property>
    <property name="min_comm_rate" type="double" unit="Hz" description="minimum frequency at which the component can work">
        <value/>
    </property>
    <property name="max_comm_rate" type="double" unit="Hz" description="maximum frequency at which the component can work">
        <value/>
    </property>
    <property name="max_size_msgs" type="double" unit="Mb" description="maximum amount of Mbs the component will send">
    	<value/>
    </property>
  <property name="voltage" type="float32" unit="V">
      <value/>
  </property>
  <property name="current_consumption" type="float32" unit="A">
      <value/>
  </property>
  <property name="current_surplus" type="float32" unit="A" description="current injection for the whole system">
      <value/>
  </property>
  <property name="power_consumption" type="float32" unit="W">
      <value/>
  </property>
  <property name="power_surplus" type="float32" unit="W" description="power injection for the whole system">
      <value/>
  </property>
</generic_specs>

<component_specs>
	<property name="min_force" type="float32" unit="N" description="minimum gripping force">
			<value/>
	</property>
	<property name="max_force" type="float32" unit="N" description="maximum gripping force">
			<value/>
	</property>
	<property name="max_payload" type="float32" unit="Kg" description="maximum recommended payload">
			<value/>
	</property>
	<property name="min_speed" type="float32" unit="mm/s" description="minimum closing speed, if equal to max_speed the component doesn't have that capability">
			<value/>
	</property>
	<property name="max_speed" type="float32" unit="mm/s" description="maximum closing speed, if equal to min_speed the component doesn't have that capability">
			<value/>
	</property>
	<property name="max_acceleration" type="float32" unit="mm/s squared" description="maximum acceleration, if 0 the component doesn't have that capability">
			<value/>
	</property>
	<property name="max_length" type="float32" unit="mm" description="maximum permitted finger length">
			<value/>
	</property>
	<property name="max_angle" type="float32" unit="rad" description="maximum permitted finger angle">
			<value/>
	</property>
	<property name="repeatability" type="float32" unit="s" description="parallel grip repeatability">
			<value/>
	</property>
</component_specs>
</root>
